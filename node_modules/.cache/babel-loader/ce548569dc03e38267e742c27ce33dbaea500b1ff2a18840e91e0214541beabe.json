{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nimport { globalVariable } from \"@/global\";\nexport default {\n  name: \"VerifyOtpPage\",\n  data() {\n    return {\n      otp: \"\",\n      email: \"\",\n      message: \"\",\n      messageType: \"\",\n      verifyInProgress: false,\n      resendInProgress: false,\n      countdown: 600,\n      timer: null,\n      role_id: null\n    };\n  },\n  mounted() {\n    const storedEmail = localStorage.getItem(\"signupEmail\");\n    const roleId = localStorage.getItem(\"selectedRoleId\");\n    if (!storedEmail) {\n      this.$router.push(\"/signup\");\n    } else {\n      this.email = storedEmail;\n      this.role_id = roleId || \"1\";\n      this.startCountdown();\n    }\n  },\n  computed: {\n    roleName() {\n      switch (parseInt(this.role_id)) {\n        case 1:\n          return \"Job Seeker\";\n        case 2:\n          return \"Employer\";\n        case 3:\n          return \"Admin\";\n        case 4:\n          return \"Agent\";\n        default:\n          return \"Job Seeker\";\n      }\n    },\n    roleDisplayName() {\n      switch (parseInt(this.role_id)) {\n        case 1:\n          return \"Job Seeker Hub\";\n        case 2:\n          return \"Job Provider Portal\";\n        case 3:\n          return \"Admin Dashboard\";\n        case 4:\n          return \"Agent Portal\";\n        default:\n          return \"Job Seeker Hub\";\n      }\n    },\n    roleTagline() {\n      switch (parseInt(this.role_id)) {\n        case 1:\n          return {\n            line1: \"Discover your dream career\",\n            line2: \"Build your professional future\"\n          };\n        case 2:\n          return {\n            line1: \"Find the perfect candidates\",\n            line2: \"Grow your team efficiently\"\n          };\n        case 3:\n          return {\n            line1: \"Manage and oversee\",\n            line2: \"Control platform operations\"\n          };\n        case 4:\n          return {\n            line1: \"Connect talent with opportunity\",\n            line2: \"Bridge careers and companies\"\n          };\n        default:\n          return {\n            line1: \"Discover your dream career\",\n            line2: \"Build your professional future\"\n          };\n      }\n    },\n    roleFeatures() {\n      switch (parseInt(this.role_id)) {\n        case 1:\n          // Job Seeker\n          return {\n            feature1: {\n              icon: \"ðŸ”\",\n              text: \"Search Jobs\"\n            },\n            feature2: {\n              icon: \"ðŸ“„\",\n              text: \"Build Resume\"\n            },\n            feature3: {\n              icon: \"ðŸŽ¯\",\n              text: \"Apply Smart\"\n            }\n          };\n        case 2:\n          // Job Provider\n          return {\n            feature1: {\n              icon: \"ðŸ“\",\n              text: \"Post Jobs\"\n            },\n            feature2: {\n              icon: \"ðŸ‘¥\",\n              text: \"Find Talent\"\n            },\n            feature3: {\n              icon: \"âš¡\",\n              text: \"Hire Fast\"\n            }\n          };\n        case 3:\n          // Admin\n          return {\n            feature1: {\n              icon: \"ðŸ“Š\",\n              text: \"Analytics\"\n            },\n            feature2: {\n              icon: \"âš™ï¸\",\n              text: \"Settings\"\n            },\n            feature3: {\n              icon: \"ðŸ›¡ï¸\",\n              text: \"Security\"\n            }\n          };\n        case 4:\n          // Agent\n          return {\n            feature1: {\n              icon: \"ðŸ¤\",\n              text: \"Connect\"\n            },\n            feature2: {\n              icon: \"ðŸ’¼\",\n              text: \"Manage\"\n            },\n            feature3: {\n              icon: \"ðŸ“ˆ\",\n              text: \"Track\"\n            }\n          };\n        default:\n          return {\n            feature1: {\n              icon: \"ðŸ”\",\n              text: \"Search Jobs\"\n            },\n            feature2: {\n              icon: \"ðŸ“„\",\n              text: \"Build Resume\"\n            },\n            feature3: {\n              icon: \"ðŸŽ¯\",\n              text: \"Apply Smart\"\n            }\n          };\n      }\n    }\n  },\n  methods: {\n    async verifyOtp() {\n      if (!this.otp) {\n        this.message = \"Please enter the verification code.\";\n        this.messageType = \"alert-danger\";\n        return;\n      }\n      if (this.otp.length !== 6) {\n        this.message = \"Please enter a valid 6-digit code.\";\n        this.messageType = \"alert-danger\";\n        return;\n      }\n      this.verifyInProgress = true;\n      this.message = \"\";\n      try {\n        const response = await axios.post(`${globalVariable}/seeker/verify-otp`, {\n          email: this.email,\n          otp: this.otp\n        });\n        if (response.status === 200) {\n          this.message = \"Email verified successfully! Redirecting to login...\";\n          this.messageType = \"alert-success\";\n          // Clear email from storage after successful verification\n          localStorage.removeItem(\"signupEmail\");\n          // Redirect to login page after short delay\n          setTimeout(() => {\n            this.$router.push(\"/login\");\n          }, 2000);\n        }\n      } catch (error) {\n        this.message = error.response?.data?.message || \"Verification failed. Please try again.\";\n        this.messageType = \"alert-danger\";\n      } finally {\n        this.verifyInProgress = false;\n      }\n    },\n    async resendOtp() {\n      this.resendInProgress = true;\n      this.message = \"\";\n      try {\n        const response = await axios.post(`${globalVariable}/seeker/resend-otp`, {\n          email: this.email\n        });\n        if (response.status === 200) {\n          this.message = \"New verification code sent to your email!\";\n          this.messageType = \"alert-success\";\n          this.countdown = 600;\n          this.startCountdown();\n          this.otp = \"\"; // Clear existing OTP\n        }\n      } catch (error) {\n        this.message = error.response?.data?.message || \"Failed to resend code. Please try again.\";\n        this.messageType = \"alert-danger\";\n      } finally {\n        this.resendInProgress = false;\n      }\n    },\n    formatOtpInput() {\n      // Remove any non-numeric characters\n      this.otp = this.otp.replace(/\\D/g, '');\n    },\n    formatTime(seconds) {\n      const minutes = Math.floor(seconds / 60);\n      const remainingSeconds = seconds % 60;\n      return `${minutes}:${remainingSeconds.toString().padStart(2, '0')}`;\n    },\n    startCountdown() {\n      if (this.timer) {\n        clearInterval(this.timer);\n      }\n      this.timer = setInterval(() => {\n        if (this.countdown > 0) {\n          this.countdown--;\n        } else {\n          clearInterval(this.timer);\n        }\n      }, 1000);\n    }\n  },\n  beforeUnmount() {\n    if (this.timer) {\n      clearInterval(this.timer);\n    }\n  }\n};","map":{"version":3,"names":["axios","globalVariable","name","data","otp","email","message","messageType","verifyInProgress","resendInProgress","countdown","timer","role_id","mounted","storedEmail","localStorage","getItem","roleId","$router","push","startCountdown","computed","roleName","parseInt","roleDisplayName","roleTagline","line1","line2","roleFeatures","feature1","icon","text","feature2","feature3","methods","verifyOtp","length","response","post","status","removeItem","setTimeout","error","resendOtp","formatOtpInput","replace","formatTime","seconds","minutes","Math","floor","remainingSeconds","toString","padStart","clearInterval","setInterval","beforeUnmount"],"sources":["/Users/gentil/Desktop/Kozi-ai-agent/src/views/VerifyOtpPage.vue"],"sourcesContent":["<template>\n  <div class=\"page-wrapper\" id=\"main-wrapper\">\n    <div class=\"login-layout\">\n      <!-- Image Section -->\n      <div class=\"image-section\" style=\"background: linear-gradient(135deg, #EA60A7 0%, #d946a3 50%, #c026d3 100%);\">\n        <div class=\"image-overlay\">\n          <div class=\"brand-content\">\n            <div class=\"brand-logo\">\n              <div class=\"logo-icon\">\n                <svg width=\"40\" height=\"40\" viewBox=\"0 0 40 40\" fill=\"none\">\n                  <path d=\"M20 0C31.046 0 40 8.954 40 20C40 31.046 31.046 40 20 40C8.954 40 0 31.046 0 20C0 8.954 8.954 0 20 0Z\" fill=\"white\"/>\n                  <path d=\"M20 8C15.582 8 12 11.582 12 16V20C12 24.418 15.582 28 20 28C24.418 28 28 24.418 28 20V16C28 11.582 24.418 8 20 8Z\" fill=\"#EA60A7\"/>\n                </svg>\n              </div>\n              <h1 class=\"logo-text\">{{ roleDisplayName }}</h1>\n            </div>\n            <div class=\"brand-tagline\">\n              <p>{{ roleTagline.line1 }}</p>\n              <p>{{ roleTagline.line2 }}</p>\n            </div>\n          </div>\n          <div class=\"floating-elements\">\n            <div class=\"floating-card card-1\">\n              <div class=\"card-icon\">{{ roleFeatures.feature1.icon }}</div>\n              <span>{{ roleFeatures.feature1.text }}</span>\n            </div>\n            <div class=\"floating-card card-2\">\n              <div class=\"card-icon\">{{ roleFeatures.feature2.icon }}</div>\n              <span>{{ roleFeatures.feature2.text }}</span>\n            </div>\n            <div class=\"floating-card card-3\">\n              <div class=\"card-icon\">{{ roleFeatures.feature3.icon }}</div>\n              <span>{{ roleFeatures.feature3.text }}</span>\n            </div>\n          </div>\n        </div>\n      </div>\n\n      <!-- Form Section -->\n      <div class=\"form-section\">\n        <div class=\"form-container\">\n          <div class=\"form-header\">\n            <h2 class=\"form-title\">Verify Email</h2>\n            <p class=\"form-subtitle\">We've sent a verification code to your email</p>\n            <div class=\"email-display\">{{ email }}</div>\n          </div>\n\n          <form @submit.prevent=\"verifyOtp\" class=\"login-form\">\n            <div class=\"error-container\" v-if=\"message\">\n              <div class=\"alert\" :class=\"messageType\">\n                <svg width=\"16\" height=\"16\" viewBox=\"0 0 16 16\" fill=\"none\">\n                  <path d=\"M8 0C3.58 0 0 3.58 0 8C0 12.42 3.58 16 8 16C12.42 16 16 12.42 16 8C16 3.58 12.42 0 8 0ZM9 12H7V10H9V12ZM9 8H7V4H9V8Z\" fill=\"currentColor\"/>\n                </svg>\n                {{ message }}\n              </div>\n            </div>\n\n            <div class=\"form-group\">\n              <label for=\"otp\" class=\"form-label\">Verification Code</label>\n              <div class=\"input-wrapper\">\n                <svg class=\"input-icon\" width=\"20\" height=\"20\" viewBox=\"0 0 20 20\" fill=\"none\">\n                  <path d=\"M18 4H2C1.45 4 1 4.45 1 5V15C1 15.55 1.45 16 2 16H18C18.55 16 19 15.55 19 15V5C19 4.45 18.55 4 18 4ZM18 7L10 12L2 7V5L10 10L18 5V7Z\" fill=\"currentColor\"/>\n                </svg>\n                <input \n                  type=\"text\" \n                  v-model=\"otp\" \n                  maxlength=\"6\" \n                  class=\"form-control otp-input\" \n                  id=\"otp\"\n                  required \n                  placeholder=\"Enter 6-digit code\"\n                  @input=\"formatOtpInput\"\n                />\n              </div>\n              <div class=\"otp-hint\">\n                <svg width=\"16\" height=\"16\" viewBox=\"0 0 16 16\" fill=\"none\">\n                  <path d=\"M8 0C3.58 0 0 3.58 0 8C0 12.42 3.58 16 8 16C12.42 16 16 12.42 16 8C16 3.58 12.42 0 8 0ZM9 12H7V10H9V12ZM9 8H7V4H9V8Z\" fill=\"currentColor\"/>\n                </svg>\n                Check your email for the code\n              </div>\n            </div>\n\n            <div class=\"countdown-section\" v-if=\"countdown > 0\">\n              <div class=\"countdown-display\">\n                <svg width=\"16\" height=\"16\" viewBox=\"0 0 16 16\" fill=\"none\">\n                  <path d=\"M8 0C3.58 0 0 3.58 0 8C0 12.42 3.58 16 8 16C12.42 16 16 12.42 16 8C16 3.58 12.42 0 8 0ZM8 2C11.31 2 14 4.69 14 8C14 11.31 11.31 14 8 14C4.69 14 2 11.31 2 8C2 4.69 4.69 2 8 2ZM8 3V8L11 11L11.71 10.29L9 7.59V3H8Z\" fill=\"currentColor\"/>\n                </svg>\n                Code expires in {{ formatTime(countdown) }}\n              </div>\n            </div>\n\n            <button type=\"submit\" class=\"btn-primary\" :disabled=\"verifyInProgress || !otp\">\n              <span v-if=\"verifyInProgress\" class=\"spinner\"></span>\n              <svg v-else width=\"20\" height=\"20\" viewBox=\"0 0 20 20\" fill=\"none\">\n                <path d=\"M10 0C4.48 0 0 4.48 0 10S4.48 20 10 20S20 15.52 20 10S15.52 0 10 0ZM8 15L3 10L4.41 8.59L8 12.17L15.59 4.58L17 6L8 15Z\" fill=\"currentColor\"/>\n              </svg>\n              {{ verifyInProgress ? 'Verifying...' : 'Verify Code' }}\n            </button>\n\n            <div class=\"divider\">\n              <span class=\"divider-text\">or</span>\n            </div>\n\n            <div class=\"resend-section\">\n              <p class=\"resend-text\">Didn't receive the code?</p>\n              <button \n                type=\"button\"\n                @click=\"resendOtp\" \n                class=\"btn-secondary\" \n                :disabled=\"resendInProgress || countdown > 540\"\n              >\n                <span v-if=\"resendInProgress\" class=\"spinner\"></span>\n                <svg v-else width=\"20\" height=\"20\" viewBox=\"0 0 20 20\" fill=\"none\">\n                  <path d=\"M10 3V1L8 3L10 5V3C13.31 3 16 5.69 16 9C16 9.73 15.84 10.42 15.56 11.06L16.93 12.43C17.60 11.39 18 10.24 18 9C18 4.58 14.42 1 10 1C9.8 1 9.6 1.02 9.41 1.05L10 3ZM6 9C6 8.27 6.16 7.58 6.44 6.94L5.07 5.57C4.40 6.61 4 7.76 4 9C4 13.42 7.58 17 12 17C12.2 17 12.4 16.98 12.59 16.95L12 15C8.69 15 6 12.31 6 9Z\" fill=\"currentColor\"/>\n                </svg>\n                {{ resendInProgress ? 'Sending...' : 'Resend Code' }}\n              </button>\n              <div v-if=\"countdown > 540\" class=\"resend-timer\">\n                Try again in {{ Math.ceil((countdown - 540) / 60) }} minute(s)\n              </div>\n            </div>\n\n            <div class=\"footer-links\">\n              <a href=\"/signup\" class=\"link\">\n                <svg width=\"16\" height=\"16\" viewBox=\"0 0 16 16\" fill=\"none\">\n                  <path d=\"M8 0L6.59 1.41L12.17 7H0V9H12.17L6.59 14.59L8 16L16 8L8 0Z\" fill=\"currentColor\"/>\n                </svg>\n                Back to Sign Up\n              </a>\n              <span class=\"separator\">â€¢</span>\n              <a href=\"/login\" class=\"link\">Sign In Instead</a>\n            </div>\n          </form>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\nimport { globalVariable } from \"@/global\";\n\nexport default {\n  name: \"VerifyOtpPage\",\n  data() {\n    return {\n      otp: \"\",\n      email: \"\",\n      message: \"\",\n      messageType: \"\",\n      verifyInProgress: false,\n      resendInProgress: false,\n      countdown: 600,\n      timer: null,\n      role_id: null,\n    };\n  },\n  mounted() {\n    const storedEmail = localStorage.getItem(\"signupEmail\");\n    const roleId = localStorage.getItem(\"selectedRoleId\");\n    \n    if (!storedEmail) {\n      this.$router.push(\"/signup\");\n    } else {\n      this.email = storedEmail;\n      this.role_id = roleId || \"1\";\n      this.startCountdown();\n    }\n  },\n  computed: {\n    roleName() {\n      switch (parseInt(this.role_id)) {\n        case 1: return \"Job Seeker\";\n        case 2: return \"Employer\";\n        case 3: return \"Admin\";\n        case 4: return \"Agent\";\n        default: return \"Job Seeker\";\n      }\n    },\n    roleDisplayName() {\n      switch (parseInt(this.role_id)) {\n        case 1: return \"Job Seeker Hub\";\n        case 2: return \"Job Provider Portal\";\n        case 3: return \"Admin Dashboard\";\n        case 4: return \"Agent Portal\";\n        default: return \"Job Seeker Hub\";\n      }\n    },\n    roleTagline() {\n      switch (parseInt(this.role_id)) {\n        case 1: \n          return {\n            line1: \"Discover your dream career\",\n            line2: \"Build your professional future\"\n          };\n        case 2:\n          return {\n            line1: \"Find the perfect candidates\",\n            line2: \"Grow your team efficiently\"\n          };\n        case 3:\n          return {\n            line1: \"Manage and oversee\",\n            line2: \"Control platform operations\"\n          };\n        case 4:\n          return {\n            line1: \"Connect talent with opportunity\",\n            line2: \"Bridge careers and companies\"\n          };\n        default:\n          return {\n            line1: \"Discover your dream career\",\n            line2: \"Build your professional future\"\n          };\n      }\n    },\n    roleFeatures() {\n      switch (parseInt(this.role_id)) {\n        case 1: // Job Seeker\n          return {\n            feature1: { icon: \"ðŸ”\", text: \"Search Jobs\" },\n            feature2: { icon: \"ðŸ“„\", text: \"Build Resume\" },\n            feature3: { icon: \"ðŸŽ¯\", text: \"Apply Smart\" }\n          };\n        case 2: // Job Provider\n          return {\n            feature1: { icon: \"ðŸ“\", text: \"Post Jobs\" },\n            feature2: { icon: \"ðŸ‘¥\", text: \"Find Talent\" },\n            feature3: { icon: \"âš¡\", text: \"Hire Fast\" }\n          };\n        case 3: // Admin\n          return {\n            feature1: { icon: \"ðŸ“Š\", text: \"Analytics\" },\n            feature2: { icon: \"âš™ï¸\", text: \"Settings\" },\n            feature3: { icon: \"ðŸ›¡ï¸\", text: \"Security\" }\n          };\n        case 4: // Agent\n          return {\n            feature1: { icon: \"ðŸ¤\", text: \"Connect\" },\n            feature2: { icon: \"ðŸ’¼\", text: \"Manage\" },\n            feature3: { icon: \"ðŸ“ˆ\", text: \"Track\" }\n          };\n        default:\n          return {\n            feature1: { icon: \"ðŸ”\", text: \"Search Jobs\" },\n            feature2: { icon: \"ðŸ“„\", text: \"Build Resume\" },\n            feature3: { icon: \"ðŸŽ¯\", text: \"Apply Smart\" }\n          };\n      }\n    }\n  },\n  methods: {\n    async verifyOtp() {\n      if (!this.otp) {\n        this.message = \"Please enter the verification code.\";\n        this.messageType = \"alert-danger\";\n        return;\n      }\n\n      if (this.otp.length !== 6) {\n        this.message = \"Please enter a valid 6-digit code.\";\n        this.messageType = \"alert-danger\";\n        return;\n      }\n\n      this.verifyInProgress = true;\n      this.message = \"\";\n      try {\n        const response = await axios.post(`${globalVariable}/seeker/verify-otp`, {\n          email: this.email,\n          otp: this.otp,\n        });\n\n        if (response.status === 200) {\n          this.message = \"Email verified successfully! Redirecting to login...\";\n          this.messageType = \"alert-success\";\n          // Clear email from storage after successful verification\n          localStorage.removeItem(\"signupEmail\");\n          // Redirect to login page after short delay\n          setTimeout(() => {\n            this.$router.push(\"/login\");\n          }, 2000);\n        }\n      } catch (error) {\n        this.message = error.response?.data?.message || \"Verification failed. Please try again.\";\n        this.messageType = \"alert-danger\";\n      } finally {\n        this.verifyInProgress = false;\n      }\n    },\n\n    async resendOtp() {\n      this.resendInProgress = true;\n      this.message = \"\";\n\n      try {\n        const response = await axios.post(`${